<p id="notice"><%= notice %></p>

<h1>Lista de productos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Stock</th>
      <th>Descripcion</th>
      <th>Familia</th>
      <th>Promocion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= product.description %></td>
        <td><%= product.family %></td>
        <td><%= product.promotion ? "Si" : "No" %></td>
        <td><%= link_to 'Mostrar', admin_product_path(product) %></td>
        <td><%= link_to 'Editar', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Eliminar', admin_product_path(product), method: :delete, data: { confirm: "Se require confirmación para eliminar al producto\n\t#{product.name}\n¿Estás seguro?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo producto', new_admin_product_path %>
