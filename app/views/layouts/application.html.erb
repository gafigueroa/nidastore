<!DOCTYPE html>
<html>
<head>
  <title>Nidastore</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to 'Pagina principal', root_path %>
<%= if @current_user != nil
  link_to "Mi Perfil", profile_path, method: :get
end
%>
<%= if @current_user != nil && @current_user.admin
  link_to "Menu admin", admin_path, method: :get
end
%>
<%= if @current_user != nil
  link_to "Logout", login_logout_path
else
  link_to "Login", login_path, method: :get
end %>
<%= yield %>

</body>
</html>
