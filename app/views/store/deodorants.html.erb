<div class="titulo_cat">
    <h1>Catálogo de desodorantes</h1>
</div>
<div class="columnas">
  <% Product.where(family: 2).each do |product| %>
  <div class="celda_p">
      <div class="nombre"><%= product.name %></div>
      <div class="precio">$<%= product.price %></div>
      <div class="descripcion"><%= product.description %></div>
      <div class="info_prod"><%= link_to 'Más información del producto' %></div>
  </div>
  <% end %>

</div>
