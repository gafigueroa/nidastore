<p id="notice"><%= notice %></p>

<h1>Listado de usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? "Si" : "No" %></td>
        <td><%= user.active ? "Si" : "No "%></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: "Se require confirmación para eliminar al usuario\n\t#{user.username}\n¿Estás seguro?" } %></td>
        <td><%=
        text = ""
        if user.active
          text = "Bloquear"
        else
          text = "Desbloquear"
        end
        link_to text, admin_active_toggle_path({id: user.id, path: users_path}), method: :patch
        %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo usuario', new_user_path %>
