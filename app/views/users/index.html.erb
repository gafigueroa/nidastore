<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Mostrar', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%=
        text = ""
        if user.active
          text = "Bloquear"
        else
          text = "Desbloquear"
        end
        link_to text, admin_active_toggle_path({id: user.id, path: users_path}), method: :patch
        %></td>
      </tr>
    <% end %>
  </tbody>
</table>

